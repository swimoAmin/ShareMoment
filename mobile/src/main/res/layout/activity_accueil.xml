<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Accueil"
    android:background="#ffffffff">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layutils"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
       >

        <ImageButton
            android:id="@+id/Pick"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

        <ImageButton
            android:id="@+id/Take"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

        <ImageButton
            android:id="@+id/Edit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

        <ImageButton
            android:id="@+id/Share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

        <ImageButton
            android:id="@+id/init"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.facebook.share.widget.ShareButton
            android:id="@+id/reflection"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/com_facebook_button_icon"/>

        <ImageButton
            android:id="@+id/Save"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

    </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/scv"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="2">


        <ImageButton
            android:id="@+id/grayscale"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"/>
             />
        <ImageButton
            android:id="@+id/dashbord"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:layout_weight="1"
            />


    </LinearLayout>
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:id="@+id/image_container"



        android:layout_below="@+id/layutils"
        android:weightSum="1"
        android:layout_above="@+id/scv">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

android:src="@mipmap/ic_launcher"
             />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/login"
        android:visibility="gone"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:background="#000000"
        >
        <TextView
            android:text="Username"

            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginBottom="50dp"
            />

        <EditText
            android:hint="Email"
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:visibility="gone"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:hint="Username"
            android:id="@+id/log"
            android:layout_width="300dp"
            android:layout_height="70dp"
             />

        <EditText
            android:hint="Password"
            android:id="@+id/pass"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:inputType="textPassword"
           />
        <Button
            android:text="Login"
            android:id="@+id/button1fb"
            android:layout_width="300dp"
            android:layout_height="70dp"
            />

        <Button
            android:text="signup"
            android:id="@+id/signup"
            android:layout_width="300dp"
            android:layout_height="70dp"
          />

    </LinearLayout>

        <Button
            android:text="cancel"
            android:id="@+id/buttoncancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal" />

    </RelativeLayout>

</RelativeLayout>

